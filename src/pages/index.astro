---
import MainLayout from "@/layouts/main.astro";
import LayoutNavigation from "@/components/layout/layout-navigation.astro";
import HeroSection from "@/features/home/hero-section.astro";
import CategoriesSection from "@/features/home/categories-section.astro";
import AboutSection from "@/features/home/about-section.astro";
import PlansSection from "@/features/home/plans-section.astro";
import { MeetingSection } from "@/features/home/meeting-section";
// import { TestimonialsSection } from "@/features/home/testimonials-section";
import { FaqSection } from "@/features/home/faq-section";
import MaterialsSection from "@/features/home/materials-section.astro";
import Footer from "@/features/home/footer.astro";
import { routing } from "@/core/config";

// biome-ignore lint/style/noNonNullAssertion: <explanation>
const domain = Astro.site!.toString().replace(/\/$/, "");
const imageUrl = `${domain}/adrian-512.webp`;
---

<MainLayout
  siteName="Mentoring IT - Konsultacje i Rozwój Kariery | Adrian Połubiński"
  url={routing.home}
  twitterCreator="@polubis"
  imageAlt="Adrian Połubiński"
  twitterSite="@polubis"
  domain={domain}
  imageUrl={imageUrl}
  keywords="zostań juniorem, zostań midem, zostań seniorem, jak zostać seniorem, jak zostać midem, jak zostać juniorem, mentoring IT, awans na seniora, rozwój kariery IT, programowanie, konsultacje IT, wywiad techniczny, przygotowanie do rozmowy, Adrian Połubiński, nauka programowania, roadmapa rozwoju, Frontend, Backend, Fullstack, DevOps, AI, Soft Skills, Bazy danych, Algorytmy i struktury danych, greenonsoftware, 4markdown, IT Mentor Polska"
  title="Mentoring IT - Konsultacje i Rozwój Kariery | Adrian Połubiński"
  description="Mentoring IT – rozwijaj karierę programisty, przygotuj się do rozmów rekrutacyjnych i ucz się świadomie => uzyskaj awans"
>
  <div
    class="bg-gradient-to-r relative from-[#111311] via-[#08140f] to-[#010F09]"
    role="banner"
    aria-label="Informacja o kursie senior w rok"
  >
    <p class="fluid text-center py-3 text-regular font-300">
      Chcesz awansować na <strong class="font-500">Seniora</strong> w rok? <br
        class="md:hidden"
      />
      <a
        href={routing.seniorInYear}
        class="underline"
        aria-label="Przejdź do sekcji z programem kursu senior w rok"
      >
        Sprawdź program kursu
      </a>
    </p>
  </div>
  <LayoutNavigation />
  <main>
    <HeroSection />
    <CategoriesSection />
    <AboutSection />
    <PlansSection />
    <MeetingSection client:visible />
    <!-- <TestimonialsSection client:visible /> -->
    <MaterialsSection />
    <FaqSection client:visible />
  </main>
  <Footer />
</MainLayout>
