---
import MainLayout from "@/layouts/main.astro";
import GlassGraphic from "../../public/glass.svg";
import PlanetGraphic from "../../public/planet.svg";
import { LayoutNavigation } from "@/components/layout/layout-navigation";
import { Action } from "@/components/ui/action";
---

<style>
	@keyframes animate-planet-graphic {
	  0% {
		transform: translate(80px, 80px);
	  }
	  100% {
		transform: translate(0px, 0px);
	  }
	}
  
	.planet-graphic {
	  animation: animate-planet-graphic 10s linear forwards;
	}
  </style>
  

<MainLayout>
  <LayoutNavigation client:load />
  <main>
    <section
      class="fluid min-h-[calc(100vh-64px)] mbl:min-h-[calc(100vh-72px)] tbt:min-h-[calc(100vh-80px)] items-center flex gap-8 justify-between"
      aria-labelledby="hero-title"
    >
      <div class="flex-1/2">
        <h1 id="hero-title" class="text-h1 font-m">
          Chcesz awansować <br /> na seniora w rok?
          <span class="bg-primary-500 h-1.5 w-7 inline-block" aria-hidden="true"
          ></span>
        </h1>
        <p class="text-regular mt-6 font-r">
          Zdobądź potrzebną wiedzę i kluczowe
          <br /> umiejętności w oparciu o plan dopasowany
          <br /> do Twoich celów.
        </p>
        <Action />
      </div>
      <div class="relative flex-1/2" aria-hidden="true">
		<PlanetGraphic
		class="absolute inset-0 m-auto planet-graphic"
	  />
	  <GlassGraphic class="absolute inset-0 m-auto glass-graphic" />
      </div>
    </section>
