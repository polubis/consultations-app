    <div class="flex mt-20 gap-2 flex-col mbl:gap-8 mbl:flex-row text-center ltp:text-left">
      <a
        href="https://greenonsoftware.com"
        target="_blank"
        rel="noopener noreferrer"
        class="text-small font-450 text-[#676767] hover:text-white transition-colors duration-300 ease-in-out"
