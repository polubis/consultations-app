---
import { appConfig } from "@/core/config";
import GlassGraphic from "./glass.astro";
---

<footer class="fluid full-section flex items-center gap-12 ltp:gap-20 justify-center flex-col ltp:flex-row">
  <GlassGraphic class="size-full aspect-square max-w-[414px] max-h-[414px]" />
  <div class="flex flex-col justify-end">
    <nav
      aria-label="Nawigacja w stopce"
      class="flex justify-center ltp:justify-start gap-8 mbl:gap-16"
    >
      <div>
        <h3 class="text-h5 font-550 mb-4">Mentoring</h3>
        <ul class="flex flex-col gap-1">
          <li>
            <a
              class="text-regular font-400 hover:text-white transition-colors duration-300 ease-in-out"
              href={`#${appConfig.contactSection.id}`}>Konsultacje</a
            >
          </li>
          <li>
            <a
              class="text-regular font-400 hover:text-white transition-colors duration-300 ease-in-out"
              href={`#${appConfig.materialsSection.id}`}>Materiały</a
            >
          </li>
          <li>
            <a
              class="text-regular font-400 hover:text-white transition-colors duration-300 ease-in-out"
              href={`#${appConfig.plansSection.id}`}>Plany</a
            >
          </li>
          <li>
            <a
              class="text-regular font-400 hover:text-white transition-colors duration-300 ease-in-out"
              href={`#${appConfig.specializationsSection.id}`}>Specjalizacje</a
            >
          </li>
        </ul>
      </div>
      <div>
        <h3 class="text-h5 font-550 mb-4">Informacje</h3>
        <ul class="flex flex-col gap-1">
          <li>
            <a
              class="text-regular font-400 hover:text-white transition-colors duration-300 ease-in-out"
              href={`#${appConfig.faqSection.id}`}>FAQ</a
            >
          </li>
          <li>
            <a
              class="text-regular font-400 hover:text-white transition-colors duration-300 ease-in-out"
              href={`#${appConfig.contactSection.id}`}>Kontakt</a
            >
          </li>
          <li>
            <a
              class="text-regular font-400 hover:text-white transition-colors duration-300 ease-in-out"
              href={`#${appConfig.aboutSection.id}`}>O mnie</a
            >
          </li>
          <li>
            <a
              class="text-regular font-400 hover:text-white transition-colors duration-300 ease-in-out"
              href={`#${appConfig.opinionsSection.id}`}>Opinie</a
            >
          </li>
        </ul>
      </div>
      <div>
        <ul class="flex flex-col gap-4">
          <li>
            <a
              href={appConfig.contactSection.linkedInLink}
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Skontaktuj się ze mną na LinkedIn (otworzy się w nowym oknie)"
            >
              <span class="sr-only">Skontaktuj się ze mną na LinkedIn</span>
